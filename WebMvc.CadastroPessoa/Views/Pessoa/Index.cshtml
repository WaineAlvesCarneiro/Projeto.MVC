@using WebMvc.CadastroPessoa.Extensions
@model IEnumerable<WebMvc.CadastroPessoa.Models.Pessoa>

@{
	ViewData["Title"] = "Lista de pessoas";
}

<p><a asp-action="Create" class="btn btn-warning">Adicionar</a></p>

<table class="table table-hover">
	<thead>
		<tr class="table-success">
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CpfCnpj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ativo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TipoPessoa)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Endereco.Cep)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Endereco.Cidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Endereco.Estado)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-active">
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@this.FormataCpfCnpj(item.TipoPessoa, item.CpfCnpj)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ativo)
				</td>
				<td>
					@this.FormataTipoPessoa(item.TipoPessoa, item.CpfCnpj)
				</td>
				<td>
					@this.FormataCEP(item.Endereco.Cep)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Endereco.Cidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Endereco.Estado)
				</td>
				<td class="text-center">
					<a asp-action="Details" title="Detalhar" class="btn btn-primary" asp-route-id="@item.Id">
						<spam class="fa fa-search"></spam>
					</a>
					<a asp-action="Delete" title="Excluir" class="btn btn-danger" asp-route-id="@item.Id">
						<spam class="fa fa-trash"></spam>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
